{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@args/*": ["src/args/*"],
      "@common/*": ["src/common/*"],
      "@entity/*": ["src/entity/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
